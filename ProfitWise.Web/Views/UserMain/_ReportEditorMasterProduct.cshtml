
<script type="text/html" id="Report-Editor-Header-Master-Product">
    <div class="row-fluid">
        <div class="col-xs-8 no-side-padding">
            <div data-bind="template: { name: 'Filter-Paging-Widget', data: $data.FilterModel }"></div>
        </div>
        <div class="col-xs-4"></div>
    </div>

    <div class="row-fluid">
        <div class="col-xs-8 no-side-padding" 
             style="border-top: 1px dashed #CCC;"
             data-bind="if: $data.PageOfMasterProducts().length">
            
            <!-- Move the Select all thingy outside, here -->
            <div data-bind="ifnot: SelectionModel.AllSelected">
                <a href="#" style="position:absolute; top:-40px; font-weight: 700;"
                   data-bind="click: SelectionModel.SelectAll">Select All</a>
            </div>
            <div data-bind="if: SelectionModel.AllSelected">
                <a href="#" style="position:absolute; top:-40px; font-weight: 700;"
                   data-bind="click: SelectionModel.DeselectAll">Deselect All</a>
            </div>
        </div>

        <div class="col-xs-1"></div>
        <div class="col-xs-3 no-side-padding" style="top:-120px; height: 250px;">
            <div style="padding:20px;">
                <p style="font-weight:700; color:#666; font-size:1.2em;">Select the Products to include in your Report</p>

                <div style="height:65px;">
                    <p style="font-size:0.95em;">Displayed results will only include data from selected Products.</p>
                </div>

                <p><a href="#" data-bind="click: GotoNextCallback" class="btn btn-default">Next &gt;&gt;</a></p>
            </div>
        </div>
    </div>
</script>

<script type="text/html" id="Report-Editor-Body-Master-Product">
    <div class="row-fluid">
        <div class="col-xs-8 reduced-padding">
            
            <div data-bind="if: PageOfMasterProducts().length == 0">
                <div data-bind="template: { name: 'Report-Editor-Empty-Results', data: { ItemDescription: 'Products' } }"></div>               
            </div>

            <table id="product-types" class="table" style="width: 100%; height: 100%; margin: 0;">
                <tbody data-bind="foreach: PageOfMasterProducts">
                <tr style="border-top: 0;">
                    <td>
                        <input class="form-control"
                                type="checkbox" 
                                style="height: 15px; width: 15px;" 
                                data-bind="checked: $data.IsChecked, click: $parent.CheckboxClick"  />
                    </td>

                    <td style="width:70%;" class="overflow-gracefully"><span data-bind="text: $data.CorrectedProductTitle"></span></td>
                    <td>(<span data-bind="text: $data.Count"></span> Skus)</td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="col-xs-4">
        </div>
    </div>
</script>

<script>
    ProfitWiseWidgets.ReportMasterProductModel = function (parent) {
        var self = this;
        self.Parent = parent;
        self.ReportId = ko.observable();

        // Data
        self.MasterProducts = ko.observableArray();
        self.PageOfMasterProducts = ko.observableArray();

        // Selections
        self.SelectionModel = new ProfitWiseWidgets.SelectionModel();
        self.SelectionModel.Callback = function() {
            self.ApplyFiltersAndPaging();
        }

        // Paging and Filtering model
        self.FilterModel = new ProfitWiseWidgets.FilterPagingWidgetModel();
        self.FilterModel.PlaceHolderText("Search for Products...");
        self.FilterModel.RegisterRefreshCallback(function () {
            self.ApplyFiltersAndPaging();
        });

        self.FilterModel.SetPageSize(5);

        self.CheckboxClick = function (item) {
            self.SelectionModel.ToggleSelect(item.PwMasterProductId);
            return true;
        };

        self.AddObservables = function(data) {
            AQ(data)
                .each(function (item) {
                    item.IsChecked = ko.computed(function () {
                        return self.SelectionModel.IsSelected(item.PwMasterProductId);
                    });

                    item.CorrectedProductTitle = ko.computed(function () {
                        return item.Title == "" ? "(No Title)" : item.Title;
                    });
                });
        };
        
        self.Refresh = function (reportId) {
            self.ReportId(reportId);
            self.FilterModel.SetPageNumber(1);
            var ajax = new ProfitWiseFunctions.Ajax();
            
            flow.exec(
                function () {
                    ajax.HttpGet("/ReportService/MasterProducts?reportId=" + self.ReportId(), this);
                },
                function (data) {
                    self.AddObservables(data);
                    self.MasterProducts(data);

                    // This loads a copy into the Selection Model for its purposes
                    self.SelectionModel.AllItems(
                        AQ(data).select(function (item) { return item.PwMasterProductId }).toArray());

                    ajax.HttpGet("/ReportService/SelectedMasterProducts?reportId=" + self.ReportId(), this);
                },
                function (data) {
                    self.SelectionModel.AllSelected(data.AllMasterProducts);
                    self.SelectionModel.MarkedItems(data.MarkedMasterProducts);
                    self.ApplyFiltersAndPaging();
                }
            );
        }

        self.Save = function() {
            flow.exec(
                function () {
                    var ajax = new ProfitWiseFunctions.Ajax();
                    var data = {
                        reportId: self.ReportId(),
                        selectAll: self.SelectionModel.AllSelected(),
                        markedMasterProducts: self.SelectionModel.MarkedItems(),
                    };
                    ajax.HttpPost("/ReportService/SelectedMasterProducts", data, this);
                },
                function(results) {
                });
        };

        self.ApplyFiltersAndPaging = function () {
            var searchText = self.FilterModel.SearchText() || "";
            var isShowAllSelected = self.FilterModel.IsShowAllSelected();

            var filteredMasterProducts = self.MasterProducts();
            if (searchText.trim() != "") {
                filteredMasterProducts =
                    AQ(filteredMasterProducts)
                    .where(function (item) {
                        return ProfitWiseFunctions
                            .CaseInsensitiveContains(item.Title, searchText);
                    })
                    .toArray();
            }

            if (!isShowAllSelected) {
                filteredMasterProducts =
                    AQ(filteredMasterProducts)
                    .where(function (item) { return item.IsChecked() })
                    .toArray();
            }

            self.FilterModel.SetRecordCount(filteredMasterProducts.length);

            var pageNumber = self.FilterModel.GetPageNumber();
            var skip = (pageNumber - 1) * self.FilterModel.GetPageSize();
            var take = self.FilterModel.GetPageSize();

            self.PageOfMasterProducts(
                AQ(filteredMasterProducts)
                .skip(skip)
                .take(take)
                .where(function(n) { return n != null })
                .toArray());
        };

        self.GotoNextCallback = function () { };
        self.GotoPreviousCallback = function () { };

        return self;
    };
</script>
