<script>
    ProfitWiseWidgets = ProfitWiseWidgets || {};

    ProfitWiseWidgets.ReportEditorModel = function () {
        var self = this;
        
        self.ReportId = ko.observable();
        self.ReportFilterTypes = {
            ProductType: "ProductType",
            Vendor: "Vendor",
            Product: "Product",
            Sku: "Skus"
        };

        self.LoadReport = function(reportId) {
            self.ReportId(reportId);
            self.ProductTypeClick();
        };
        
        self.ReportProductTypeModel = new ProfitWiseWidgets.ReportProductTypeModel(self);

        /* TODO - move these
        self.VendorFilterModel = new ProfitWiseWidgets.FilterPagingWidgetModel("Search for Vendors...");
        self.ProductFilterModel = new ProfitWiseWidgets.FilterPagingWidgetModel("Search for Products by Title");
        self.SkuFilterModel = new ProfitWiseWidgets.FilterPagingWidgetModel("Search for SKU by Title");        
        self.VendorGrid = ko.observable([]);
        self.ProductGrid = ko.observable([]);
        self.SkuGrid = ko.observable([]);
        */

        self.ProductTypeClick = function () {
            self.ReportProductTypeModel.Refresh(this.ReportId());
            self.SelectedFilter(self.ReportFilterTypes.ProductType);
            ProfitWiseFunctions.BsActivateTab("report-filter-product-type");
        };

        self.VendorClick = function () {
            self.SelectedFilter(self.ReportFilterTypes.Vendor);
            ProfitWiseFunctions.BsActivateTab("report-filter-vendor");
        };

        self.ProductClick = function () {
            self.SelectedFilter(self.ReportFilterTypes.Product);
            ProfitWiseFunctions.BsActivateTab("report-filter-product");
        };

        self.SkuClick = function () {
            self.SelectedFilter(self.ReportFilterTypes.Sku);
            ProfitWiseFunctions.BsActivateTab("report-filter-sku");
        };

        self.GotoNextTab = function() {
            // TODO => build this out
        };

        self.GotoPreviousTab = function() {
            // TODO => build this out
        };

        self.SelectedFilter = ko.observable(self.ReportFilterTypes.ProductType);

        self.OkCallback = function () { };

        self.RegisterOkCallback = function (callback) {
            self.OkCallback = callback;
        };

        return self;
    };

    ProfitWiseWidgets.ReportProductTypeModel = function(parent) {
        var self = this;

        self.ReportId = ko.observable();
        self.Parent = parent;
        
        self.ProductTypeFilterModel = new ProfitWiseWidgets.FilterPagingWidgetModel("Search for Product Types...");
        self.ProductTypeSummaries = ko.observable([]);
        
        // TODO - how to filter the Product Types that are shown in the grid... practically?

        self.Refresh = function(reportId) {
            self.ReportId(reportId);

            flow.exec(
                function() {
                    var ajax = new ProfitWiseFunctions.Ajax();
                    ajax.HttpGet("/ReportService/ProductTypes", this);
                }, 
                function (data) {
                    console.log(data);
                    self.ProductTypeSummaries(data);
                }
            );
        }

        return self;
    };

</script>
