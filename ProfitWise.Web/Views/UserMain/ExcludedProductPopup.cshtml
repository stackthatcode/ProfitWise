@model ProfitWise.Web.Models.SimpleMasterProduct

@{
    ViewBag.CommonContext.PageTitle = "Bulk Edit Product Variant CoGS";
    Layout = "~/Views/Shared/_UserLayoutDialogBox.cshtml";
}


<script id="Main-Template" type="text/html">
    <h4 style="font-weight: 600;" data-bind="text: $data.ProductTitle"></h4>
    <p>
        Would you like to Include or Exclude all <span data-bind="text: VariantCount"></span> Variants?
    </p>

    <div style="height: 24px;"></div>
    <form class="form-inline">
        <div class="form-group">
            <a href="#" data-bind="click: $root.IncludeAllProductVariants" class="form-control btn btn-primary" style="width: 48%;"><i class="glyphicon glyphicon-eye-open"></i> &nbsp; Include ALL Variants</a>
            <a href="#" data-bind="click: $root.ExcludeAllProductVariants" class="form-control btn btn-primary" style="width: 48%;"><i class="glyphicon glyphicon-eye-close"></i> &nbsp; Exclude ALL Variants</a>
        </div>
    </form>
</script>

<div data-bind="template: { name: 'Main-Template' }">
</div>


<script>
    // Extract Shopify Product Id from MVC layer
    var shopifyProductId = @Model.ShopifyProductId;

    $(document)
        .ready(function () {
            var ProfitWise = ProfitWise || {};
            
            ProfitWise.ExcludedModel = function() {
                var self = this;

                self.ShopifyProductId = ko.observable();
                self.ProductTitle = ko.observable();
                self.VariantCount = ko.observable();
                self.IncludeAllProductVariants = function() {
                    alert("Include All for Product");

                    ShopifyApp.Modal.close(true);
                };

                self.ExcludeAllProductVariants = function() {
                    alert("Exclude All for Product");

                    ShopifyApp.Modal.close(true);
                };
            };

            var model = new ProfitWise.ExcludedModel();
            model.ProductTitle("3D Universe 2.85 mm PLA");
            model.VariantCount(84);
            
            ko.applyBindings(model);
            window.ModelHandle = model;
        });
</script>
   
