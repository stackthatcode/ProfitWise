@model ProfitWise.Web.Models.SimpleMasterProduct

@{
    ViewBag.CommonContext.PageTitle = "Bulk Edit Product Variant CoGS";
    Layout = "~/Views/Shared/_UserLayoutDialogBox.cshtml";
}


<script id="Main-Template" type="text/html">
    <h4 style="font-weight: 600;" data-bind="text: $data.ProductTitle"></h4>
    <p>
        How would you like to set Stocked Directly for all <span data-bind="text: VariantCount"></span> Variants?
    </p>

    <div style="height: 24px;"></div>
    <form class="form-inline">
        <div class="form-group">
            <a href="#" data-bind="click: $root.SetAllProducts" class="form-control btn btn-primary" style="width: 48%;"><i class="glyphicon glyphicon-ok"></i> &nbsp; Mark ALL as Stocked Directly</a>
            <a href="#" data-bind="click: $root.SetProductNoneStockedDirectly" class="form-control btn btn-primary" style="width: 48%;"><i class="glyphicon glyphicon-remove"></i> &nbsp; Mark NONE as Stocked Directly</a>
        </div>
    </form>
</script>

<div data-bind="template: { name: 'Main-Template' }">
</div>


<script>
    var pickListId = @Model.Id;

    $(document)
        .ready(function () {
            var ProfitWise = ProfitWise || {};
            
            ProfitWise.StockedDirectlyModel = function() {
                var self = this;

                self.ShopifyProductId = ko.observable();
                self.ProductTitle = ko.observable();
                self.VariantCount = ko.observable();

                self.SetAllProducts = function() {
                    alert("Set All for Product");
                    
                    ShopifyApp.Modal.close(true);
                };

                self.SetProductNoneStockedDirectly = function() {
                    alert("Set None for Product");

                    ShopifyApp.Modal.close(true);
                };
            };

            var model = new ProfitWise.StockedDirectlyModel();
            model.ProductTitle("3D Universe 2.85 mm PLA");
            model.VariantCount(84);
            
            ko.applyBindings(model);
            window.ModelHandle = model;
        });
</script>
   
