@using System.Configuration

@using ProfitWise.Web.Attributes
@{
    var commonContext = Context.AuthenticatedContext();
}

<script>
    var ProfitWiseConfig = ProfitWiseConfig || {};
    ProfitWiseConfig.BaseUrl = '@ConfigurationManager.AppSettings["application_root_url"]';
</script>

<!-- Font -->
<link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,800italic,700italic,800,700,600italic,600,400italic,300italic' 
      rel='stylesheet' type='text/css'>

<!-- Scripts -->
@Scripts.Render("~/Bundles/Utility")

@Scripts.Render("~/Bundles/Bootstrap")
@Scripts.Render("~/Bundles/Highcharts")
@Scripts.Render("~/Bundles/KO")

<!-- ProfitWise JavaScript -->
@if (commonContext != null && !commonContext.IsImpersonated)
{
@Scripts.Render("~/Bundles/ProfitWiseFunctions")
}
else
{
@Scripts.Render("~/Bundles/ProfitWiseFunctionsImpersonated")
}

<!-- Style Sheet -->
@Styles.Render("~/Content/Bootstrap")
@Styles.Render("~/Content/Css")
@Styles.Render("~/Content/site.css")
@Styles.Render("~/Content/shepherd-dist/css/shepherd-theme-arrows.css")


<!-- Shopify JavaScript API -->
<script src="https://cdn.shopify.com/s/assets/external/app.js"></script>
